def quadrilateral_area(vertices):
    triangle1 = triangle_properties(*vertices[0], *vertices[1], *vertices[2])
    triangle2 = triangle_properties(*vertices[0], *vertices[2], *vertices[3])
    return triangle1[1] + triangle2[1]

