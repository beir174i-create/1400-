def triangle_properties(x1, y1, x2, y2, x3, y3):
    side1 = distance_between_points(x1, y1, x2, y2)
    side2 = distance_between_points(x2, y2, x3, y3)
    side3 = distance_between_points(x3, y3, x1, y1)
    perimeter = side1 + side2 + side3
    s = perimeter / 2
    area = (s * (s - side1) * (s - side2) * (s - side3)) ** 0.5
    return perimeter, area

